    function validarchk(){
        var chk = document.getElementById('chk');
        if(chk.checked){
            inputDescuento.disabled = 0 ;

        }else{
            inputDescuento.value= 0 ;
            inputDescuento.disabled='disabled';
        }
    }

     /* Llenar producto dinamicamente */
    const llenarProducto=()=>{
        arregloProducto.forEach((p)=>{
            const option = document.createElement("option");
            option.value= p.id;
            option.innerText = p.nombre;
            selectDescripcion.appendChild(option);
        });
    };
    llenarProducto();
    /*  */
    
    /* obtener el nombre del producto por su id */
    const getNombreProductoById = (id)=>{
        const objProdcuto = arregloProducto.find((p)=>{
            if (p.id === +id) {
                return p;
            };
        });
        return objProdcuto.nombre;
    };
    /*  */

    /*  */
    const getPrecioProductoById = (id)=>{
        const objProdcuto = arregloProducto.find((p)=>{
            if (p.id === +id) {
                return p;
            };
        });
        return objProdcuto.precio;
    };
    /*  */

    /* Llenar la tabla */
    const redibujarTabla = ()=>{
        cuerpoTabla.innerHTML="";
        arregloDetalle.forEach((detalle)=>{
            let fila = document.createElement('tr');
            fila.innerHTML = `
            <td>${detalle.cant}</td>

            <td>${getNombreProductoById(detalle.descripcion)}</td>

            <td>${detalle.pUnit}</td>
            <td>${detalle.pTotal}</td>
            `;
    let tdEliminar = document.createElement("td"); 
    let botonEliminar = document.createElement("button");
    botonEliminar.classList.add("btn","btn-danger");
    botonEliminar.innerText="Eliminar";
    botonEliminar.onclick=()=>{
        eliminarDeatalleById(detalle.descripcion);
    };
    tdEliminar.appendChild(botonEliminar);
    fila.appendChild(tdEliminar);
    cuerpoTabla.appendChild(fila);
        })
    }

   

    const eliminarDeatalleById = (id)=>{
        arregloDetalle = arregloDetalle.filter((detalle)=>{
            if (+id !== +detalle.descripcion) {
                return detalle;
            }
        });
        RestarTotal()
        redibujarTabla();
    }
    /*  */
    const RestarTotal=()=>{
        const Subtotal = Object.values(arregloDetalle).reduce((acc,{cant , pUnit })=> acc + cant* pUnit ,0);
        const iva = inputIva.value = Subtotal *0.12
        const sumasubtotal = inputSubtotal.value = Subtotal
        inputDescuento1.value= inputDescuento.value;
        const descuentos = +inputDescuento1.value/100 ;
        const Totalmedio =  sumasubtotal + iva;
        if (descuentos > 0) {
            inputTotal.value =  Totalmedio * descuentos
            
        }else{
            inputTotal.value =  Totalmedio 
            
        }
    }

    /*  */
    const agregarDetalle=(objDetalle)=>{
        //buscar si el objeto detalle ya existia en el arreglo detalle, de s er asi subar las cantidades
        const resultado = arregloDetalle.find((detalle)=>{
            if (+objDetalle.descripcion === +detalle.descripcion) {
                return detalle;
            }
        })
        
        if (resultado) {
            arregloDetalle = arregloDetalle.map((detalle)=>{
            if (+detalle.descripcion == +objDetalle.descripcion) {
                return {
                    cant: +detalle.cant + +objDetalle.cant,
                    descripcion: detalle.descripcion,
                    pTotal: (+detalle.cant + +objDetalle.cant)* +detalle.pUnit,
                    pUnit: +detalle.pUnit,
                    
                }
            }
            return detalle;
        })
        SumarTotal()
        }else {
            arregloDetalle.push(objDetalle);
            SumarTotal()
        }
        
    }
    /*  */ 
    
    const SumarTotal=()=>{
        const Subtotal = Object.values(arregloDetalle).reduce((acc,{cant , pUnit })=> acc + cant* pUnit ,0);
        const iva = inputIva.value = Subtotal *0.12
        const sumasubtotal = inputSubtotal.value = Subtotal
        inputDescuento1.value= inputDescuento.value;
        const descuentos = +inputDescuento1.value/100 ;
        const Totalmedio =  sumasubtotal + iva;
        if (descuentos > 0) {
            inputTotal.value =  Totalmedio * descuentos
            
        }else{
            inputTotal.value =  Totalmedio 
            
        }
        
    }

    /* obtener valor del detalle */
    formDetalle.onsubmit=(e)=>{
        e.preventDefault();
        //creando objeto detalle
        const objDetalle ={
            cant: inputCantidad.value, 
            descripcion: selectDescripcion.value,
            pUnit: inputPUnitario.value,
            pTotal: inputPTotal.value
        }
        agregarDetalle(objDetalle);
        redibujarTabla();
        formDetalle.reset();
    }
    /*  */

    /* Boton Guardar */
    btnGuardar.onclick = ()=>{
        //crear el objeto de la cabecera de la factura
        let objFactura ={
            nombre: inputNombre.value,
            direccion: inputDireccion.value,
            fecha: inputFecha.value,
            nro: inputNro.value,
            ruc: inputRuc.value,
