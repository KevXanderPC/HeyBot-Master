            iva: inputIva.value,
            descuento: inputDescuento1.value,
            total:inputTotal.value,
            detalle: arregloDetalle
        }
        
        

        facturas.push(objFactura);
        //console.log(facturas);
        //limpiar campos
        formCabecera.reset();
        formDetalle.reset();
        arregloDetalle=[];
        redibujarTabla();
        // guardar en el localStorage
        /* localStorage.setItem("facturas",JSON.stringify(facturas)); */

        /* https://www.youtube.com/watch?v=uglzztniRGg  */
