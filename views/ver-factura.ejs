<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Factura</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
        <div class="col-sm-6">
            <a href="/facturas" class="btn btn-primary my-2"><i class="fas fa-list-ol"></i> Listado de facturas</a>
        </div>
    </section>
    <!-- /.content -->

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-file-invoice-dollar"></i> Detalle de Factura</h3>
                        </div>
                              <div class="card-body">
                                <div class="row">
                                    <div class="col-12">
                                        <% if (factura.estado == true) { %>
                                            
                                            <% } else {%>
                                                <div class="callout callout-danger">
                                                    <h5><i class="fas fa-info"></i> Note:</h5>
                                                    Esta factura aun esta Pendiente de cancelar.
                                                  </div>
                                            <%} %>
                                      <!-- Main content -->
                                      <div class="invoice p-3 mb-3">
                                        <!-- title row -->
                                        <div class="row">
                                          <div class="col-12">
                                            <h4>
                                                <a class="brand-link">
                                                    <img src="https://media-exp1.licdn.com/dms/image/C4D0BAQEkvsI8hi8yqA/company-logo_200_200/0/1615474257587?e=2159024400&v=beta&t=j4gaP_RdGH6ToQxoeCdM_7OXajutJxKPeI4Hq9jhU2c" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                                                        style="opacity: .8">
                                                    <span class="brand-text font-weight-light">Hey! bot-master</span>
                                                </a>
                                              <small class="float-right"><strong>fecha de creacion:</strong> <% moment.locale('es'); %>
                                                <% const fechacreacion = factura.fechacreacion %>
                                                <%= moment(fechacreacion).format('DD-MM-YYYY') %></small>
                                               
                                            </h4>
                                          </div>
                                          <!-- /.col -->
                                        </div>
                                        <!-- info row -->
                                        <div class="row invoice-info">
                                          <div class="col-sm-4 invoice-col">
                                            Para
                                            <address>
                                              <strong>Hey! bot-master</strong><br>                                   
                                              Email: admin@admin.com
                                            </address>
                                          </div>
                                          <!-- /.col -->
                                          <div class="col-sm-4 invoice-col">
                                            de
                                            <address>
                                              <strong><%= factura.cliente.nombre %> </strong><br>
                                              Direccion: <%= factura.contrato.direccion %><br>
                                              Telefono: <%= factura.cliente.telefono %><br>
                                              Contrato: <%= factura.contrato.contrato_id %>
                                            </address>
                                          </div>
                                          <!-- /.col -->
                                          <div class="col-sm-4 invoice-col">
                                            <b>Estado de Factura:</b><br>
                                            <br><h5><% if (factura.estado == true) { %>
                                                <span class="badge rounded-pill bg-success">PAGADO</span>
                                                <% } else {%>
                                                <span class="badge rounded-pill bg-danger">VIGENTE</span>
                                                <%} %></h5> <br>
                                            
                                          </div>
                                          <!-- /.col -->
                                        </div>
                                        <!-- /.row -->
                          
                                        <!-- Table row -->
                                        
                                        <div class="row">
                                          <div class="col-12 table-responsive">
                                            <table class="table table-striped" style="text-align: center;">
                                              <thead>
                                              <tr>
                                                <th>NÂª Factura</th>
                                                <th>Descripcion</th>
                                                <th>Subtotal</th>
                                              </tr>
                                              </thead>
                                              <tbody>
                                              <tr>
                                                <td><%= factura.factura_id %></td>
                                                <td><%= factura.descripcion %></td>
                                                <td>$ <%= factura.subtotal %></td>
                                              </tr>
                                              </tbody>
                                            </table>
                                          </div>
                                          <!-- /.col -->
                                        </div>
                                        <!-- /.row -->
                          
                                        <div class="row">
                                          <!-- accepted payments column -->
                                          <div class="col-6">
                                           
                                          </div>
                                          <!-- /.col -->
                                          <div class="col-6">
                          
                                            <div class="table-responsive">
                                              <table class="table">
                                                <tr>
                                                  <th style="width:50%">Subtotal:</th>
                                                  <td>$ <%= factura.subtotal %></td>
                                                </tr>
                                                <tr>
                                                  <th>Iva (12%)</th>
                                                  <td><%= factura.iva %> </td>
                                                </tr>
                                                <tr>
                                                  <th>Descuento:</th>
                                                  <td><%= factura.descuento %></td>
                                                </tr>
                                                <tr>
                                                  <th>Total:</th>
                                                  <td>$ <%= factura.total%></td>
                                                </tr>
                                              </table>
                                            </div>
                                          </div>
                                          <!-- /.col -->
                                        </div>
                                        <!-- /.row -->
                          
                                        <!-- this row will not appear when printing -->
                                      </div>
                                      <!-- /.invoice -->
                                    </div><!-- /.col -->
                                  </div><!-- /.row -->
                                </div>
                    </div>                       
                </div>                   
            </div>
        </div>
    </section>
</div>