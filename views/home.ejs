<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Dashboard</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
          <div class="col-lg-3 col-6">
            <!-- small box -->
           
            <div class="small-box bg-info">
              <div class="inner">
                <h3> <%= contratos.length %></h3>

                <p>Total de contratos</p>
              </div>
              <div class="icon">
                <i class="far fa-address-card"></i>
              </div>
              <a href="/contratos" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                <h3><%= usuarios.length %></h3>

                <p>Total de Clientes</p>
              </div>
              <div class="icon">
                <i class="ion ion-person-add"></i>
              </div>
              <a href="/clientes" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                <h3><%= tickets.length %></h3>

                <p>Total de Tickets</p>
              </div>
              <div class="icon">
                <i class="fas fa-clipboard-list"></i>
              </div>
              <a href="/tickets" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">
                <h3><%= reportes.length %></h3>

                <p>Total de Reportes</p>
              </div>
              <div class="icon">
                <i class="fas fa-file-invoice"></i>
              </div>
              <a href="/reportes" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
          <!-- Left col -->
          <section class="col-lg-6 ">
            <!-- DIRECT CHAT -->
            <div class="card direct-chat direct-chat-primary">
              <div class="card-header">
                <h3 class="card-title">Listado de Tickes</h3>
                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <!-- Conversations are loaded here -->
                <div class="direct-chat-messages">
                    <div class="card card-primary card-outline">
                        <% if (tickets.length> 0) {%>
                        <div class="row table-responsive">
                            <div class="col-12 mx-auto ">
                                <table class="table " style="text-align: center;">
                                    
                                    <thead>
                                        <tr>
                                            <th>Nº</th>
                                            <th>Contrato</th>
                                            <th>Descripcion</th>
                                            <th>Estado</th>
                                            <th>Fecha de Creacion</th>
                                            <th>Fecha de Atencion</th>
                                            
                                        </tr>
                                    </thead>
                                    <% tickets.forEach(ticket=> {%>
                                    <tbody>
                                        
                                        <tr >
                                            <th scope="row">
                                                <%= ticket.ticket_id %>
                                            </th>
                                            <td>
                                              <%= ticket.contrato.contrato_id %>
                                          </td>
                                          <td>
                                              <%= ticket.descripcion %>
                                          </td>
                                          <td>
                                              <% if (ticket.estado == true) { %>
                                              <span class="badge rounded-pill bg-success">Solucionado</span>
                                              <% } else {%>
                                              <span class="badge rounded-pill bg-danger">No se ha solucionado</span>
                                              <%} %>
                                          </td>
                                          <td>
                                            <% moment.locale('es'); %>
                                            <% const fechacreacion = ticket.fechacreacion %>
                                            <%= moment(fechacreacion).format('DD-MM-YYYY') %>
                                          </td>
                                          <td>
                                            <% moment.locale('es'); %>
                                            <% const fechaatencion = ticket.fechaatencion %>
                                            <%= moment(fechaatencion).format('DD-MM-YYYY') %>
                                          </td>
                                        </tr>
                                    <% }); %>
                                    </tbody>
                                </table>
                                <!-- /.card -->
                                <%} else {%>
                                    <div class="card-body table-responsive p-0">
                                        <table class="table table-hover text-nowrap">
                                            <thead>
                                                <tr>
                                                  <th>Nº</th>
                                                  <th>Contrato</th>
                                                  <th>Descripcion</th>
                                                  <th>Estado</th>
                                                  <th>Fecha de Creacion</th>
                                                  <th>Fecha de Atencion</th>
                                                  
                                                </tr>
                                            </thead>
                                            <tbody>
                                               
                                            </tbody>
                                        </table>
                                        <div class="alert alert-info alert-dismissible">
                                            <button type="button" class="close" data-dismiss="alert"
                                                aria-hidden="true">×</button>
                                            <h5>Alert!</h5>
                                            No hay datos ingresados.
                                        </div>
                                    </div>
                            </div>
                            <!-- /.row -->
                        </div>
                        <%} %>
                    </div>
                </div>
                <!--/.direct-chat-messages-->

                <!-- Contacts are loaded here -->
                
                <!-- /.direct-chat-pane -->
              </div>
            </div>
            <!--/.direct-chat -->
          </section>
          <!-- /.Left col -->
          <!-- right col (We are only adding the ID to make the widgets sortable)-->
          <section class="col-lg-6 ">
            <!-- DIRECT CHAT -->
            <div class="card direct-chat direct-chat-primary">
              <div class="card-header">
                <h3 class="card-title">Listado de Reportes</h3>
                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <!-- Conversations are loaded here -->
                <div class="direct-chat-messages">
                 
                  <div class="card card-primary card-outline">
                    <% if (reportes.length> 0) {%>
                    <div class="row table-responsive">
                        <div class="col-12 mx-auto ">
                            
                            
                            <table class="table" style="text-align: center;">
                                
                                <thead>
                                    <tr>
                                        <th>Nº</th>
                                        <th>Usuario</th>
                                        <th>Contrato</th>
                                        <th>Requerimiento</th>
                                        <th>Solucionado</th>
                                        <th>Observacion</th>
                                        <th>Fecha de creacion</th>
                                    </tr>
                                </thead>
                                <% reportes.forEach(reporte=> {%>
                                <tbody>
                                    
                                    <tr >
                                        <th scope="row">
                                            <%= reporte.reporte_id %>
                                        </th>
                                        <td>
                                            <%= reporte.cliente.nombre %>
                                        </td>
                                        <td>
                                          <%= reporte.contrato.contrato_id %>
                                      </td>
                                      <td>
                                          <%= reporte.requerimiento %>
                                      </td>
                                      <td>
                                          <% if (reporte.solucionado == true) { %>
                                          <span class="badge rounded-pill bg-success">Si</span>
                                          <% } else {%>
                                          <span class="badge rounded-pill bg-danger">No</span>
                                          <%} %>
                                      </td>
                                      <td>
                                          <%= reporte.motivo %>
                                      </td>
                                      <td>
                                          <%= reporte.fechacreacion %>
                                      </td>
                                    </tr>
                                <% }); %>
                                </tbody>
                            </table>
                            <!-- /.card -->
                            <%} else {%>
                                <div class="card-body table-responsive p-0">
                                    <table class="table table-hover text-nowrap">
                                        <thead>
                                            <tr>
                                              <th>Nº</th>
                                              <th>Usuario</th>
                                              <th>Contrato</th>
                                              <th>Requerimiento</th>
                                              <th>Solucionado</th>
                                              <th>Observacion</th>
                                              <th>Fecha de creacion</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                           
                                        </tbody>
                                    </table>
                                    <div class="alert alert-info alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert"
                                            aria-hidden="true">×</button>
                                        <h5>Alert!</h5>
                                        No hay datos ingresados.
                                    </div>
                                </div>
        
                               
                        </div>
                        <!-- /.row -->
      
      
                    </div>
                    <%} %>
                </div>

                </div>
                <!--/.direct-chat-messages-->
              </div>
            </div>
            <!--/.direct-chat -->
          </section>
          <!-- right col -->
        </div>
        <!-- /.row (main row) -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>