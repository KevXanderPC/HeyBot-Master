<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Facturas</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                  <div class="inner">
                    <h3><%= facturas.length %> </h3>
    
                    <p>Total de Facturas</p>
                  </div>
                  <div class="icon">
                    <i class="far fa-check-circle"></i>
                  </div>
                </div>
              </div>
        </div>
      </div><!-- /.container-fluid --> 
    <div class="col-sm-6">
      <a href="/crear-factura" class="btn btn-warning my-2"><i class="fas fa-plus-circle"></i> Crear nueva factura</a>
  </div>    
    </section>
    <!-- /.content -->

    <section class="content">
      <div class="container-fluid">
          <div class="card card-primary card-outline">
              <div class="card-header">
                  <h5 class="mb-0 text-center">
                    <strong>Tabla de Facturas </strong>
                  </h5>
              </div> <!-- /.card-body -->
              <% if (facturas.length> 0) {%>
              <div class="row table-responsive">
                  <div class="col-12 mx-auto  ">
                      <table class="table" style="text-align: center;">
                        <thead>
                          <tr>
                              <th>Nº</th>
                              <th>Usuario</th>
                              <th>Contrato</th>
                              <th>Descripcion</th>
                              <th>Fecha de creacion</th>
                              <th>Estado</th>
                              <th>Opcion</th>
                          </tr>
                      </thead>
                          <tbody>
                            <% facturas.forEach(factura=> {%>
                              <tr >
                                <th scope="row">
                                  <%= factura.factura_id %>
                              </th>
                               <td>
                                  <%= factura.cliente.nombre %>
                                </td>
                              <td>
                                <%= factura.contrato.contrato_id %>
                              </td>
                              <td>
                                <%= factura.descripcion %>
                              </td>
                              <td>
                                <% moment.locale('es'); %>
                                <% const fechacreacion = factura.fechacreacion %>
                                <%= moment(fechacreacion).format('DD-MM-YYYY') %>
                              </td>
                              <td>
                              <% if (factura.estado == true) { %>
                              <span class="badge rounded-pill bg-success">Pagado</span>
                              <% } else {%>
                              <span class="badge rounded-pill bg-danger">Vigente</span>
                              <%} %>
                              </td>
                              <td>
                                <a class="btn btn-primary" href="/ver-factura/<%= factura.factura_id %>">
                                  Ver Factura
                                </a> 
                              </td>
                              </tr>
                              
                          <% }); %>
                          </tbody>
                      </table>
                      <!-- /.card -->
                      <%} else {%>
                          <div class="card-body table-responsive p-0">
                              <table class="table table-hover text-nowrap">
                                  <thead>
                                    <tr>
                                        <th>Nº</th>
                                        <th>Usuario</th>
                                        <th>Contrato</th>
                                        <th>Descripcion</th>
                                        <th>Fecha de creacion</th>
                                        <th>Estado</th>
                                        <th>Opcion</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                     
                                  </tbody>
                              </table>
                              <br>
                              <div style="width:500px; margin: 0 auto">
                                  <div class="row">
                                      <div class="col align-self-center">
                                          <div class="alert alert-primary d-flex align-items-center" role="alert">
                                              <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:" style="margin-right: 10px;"><use xlink:href="#info-fill"/>
                                                  <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                                                      <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                                                    </symbol></svg>
                                              <div>
                                                No hay datos insertados
                                              </div>
                                            </div>
                                      </div>                                   
                                  </div>
                              </div>
                          </div>
                  </div>
                  <!-- /.row -->
              </div>
              <%} %>
          </div>
      </div><!-- /.container-fluid -->
  </section>

  </div>